                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onMateriaMenuButtonOnClick" style="-fx-background-color: #345177;" text="Materia" textFill="WHITE">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#OnSalirButtonClick" style="-fx-background-color: #E74C3C;" text="Salir" textFill="WHITE">
